<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.xiaofei.shop.dao.CustomerDao">
    <resultMap id="customerMap" type="Customer">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="login_name" property="loginName"/>
        <result column="password" property="password"/>
        <result column="phone" property="phone"/>
        <result column="address" property="address"/>
        <result column="is_valid" property="isValid"/>
        <result column="register_date" property="registerDate"/>
    </resultMap>

    <sql id="customerIf">
        <if test="name!=null and name!=''">
            and name=#{name}
        </if>
        <if test="loginName!=null and loginName!=''">
            and login_name=#{loginName}
        </if>
        <if test="phone!=null and phone!=''">
            and phone=#{phone}
        </if>
        <if test="address!=null and address!=''">
            and address=#{address}
        </if>
        <if test="isValid!=null and isValid!='-1'">
            and is_valid=#{isValid}
        </if>
    </sql>

    <sql id="customerColumn">id,name,login_name,password,phone,address,is_valid,register_date</sql>

    <insert id="saveCustomer" parameterType="Customer" useGeneratedKeys="true" keyProperty="id">
        insert into customers (name, login_name, password, phone, address, is_valid, register_date)
        VALUES
        (#{name},#{loginName},#{password},#{phone},#{address},#{isValid},#{registerDate})
    </insert>

    <delete id="deleteCustomerById">
        delete from customers
        where id=#{id}
    </delete>

    <update id="updateCustomer">
        update customers
        set name=#{name},phone=#{phone},address=#{address}
        where login_name=#{loginName}
    </update>

    <update id="updateCustomerStatus">
        update customers
        set is_valid=#{isValid}
        where id=#{id}
    </update>

    <select id="getCustomers" resultMap="customerMap">
        select <include refid="customerColumn"/>
        from customers
    </select>

    <select id="getCustomerByAccName" resultMap="customerMap">
        select <include refid="customerColumn"/>
        from customers
        where login_name=#{loginName}
    </select>

    <select id="getCustomerById" resultMap="customerMap">
        select <include refid="customerColumn"/>
        from customers
        where id=#{id}
    </select>

    <select id="getCustomerByParams" resultMap="customerMap">
        select <include refid="customerColumn"/>
        from customers
        where 1=1 <include refid="customerIf"/>
    </select>

    <select id="getCustomerByCredential" resultMap="customerMap">
        select <include refid="customerColumn"/>
        from customers
        where
              login_name=#{loginName}
        and
              password=#{password}
    </select>

    <select id="getCustomerByPhone" resultMap="customerMap">
        select <include refid="customerColumn"/>
        from customers
        where
        phone=#{phone}
    </select>

    <select id="getCustomerByName" resultMap="customerMap">
        select <include refid="customerColumn"/>
        from customers
        where
            name=#{name}
    </select>

</mapper>